<?php
// db.php.example
// Copy this file to db.php and fill in your database credentials

$host = 'localhost';        // Database host
$db   = 'maintenance';      // Database name
$user = 'root';             // Database username
$pass = '';                 // Database password (set it if it exists)

try {
    $pdo = new PDO(
        "mysql:host=$host;dbname=$db;charset=utf8mb4",
        $user,
        $pass,
        [
            PDO::ATTR_ERRMODE => PDO::ERRMODE_EXCEPTION,
            PDO::ATTR_DEFAULT_FETCH_MODE => PDO::FETCH_ASSOC
        ]
    );
    // Uncomment for debugging, but REMOVE in production!
    // echo "Database connected successfully!";
} catch (PDOException $e) {
    // For production, log errors but don't display to public
    die("Database connection failed.");
}
?>

